# Runtime environment: development / production
NODE_ENV=production

# Server port
PORT=8000

# Log level: trace | debug | info | warn | error | fatal
LOG_LEVEL=info

# JWT secret (must be changed to a strong random value)
JWT_SECRET=please-change-me

# Hostname (optional, used in log fields)
HOSTNAME=one-api-hub

# Admin initial password (must set in production for first-time admin creation)
ADMIN_INITIAL_PASSWORD=admin123456

# Database path (optional)
# DB_PATH=/data/data.db